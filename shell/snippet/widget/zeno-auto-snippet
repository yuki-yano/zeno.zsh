#autoload

emulate -L zsh

local -a out

out=( "${(f)$(zeno-call-client-and-fallback --zeno-mode=auto-snippet \
  --input.lbuffer="$LBUFFER" \
  --input.rbuffer="$RBUFFER" \
  )}" )

if [[ $out[1] != success ]]; then
  LBUFFER+=" "
  return
fi

if [[ -n $out[2] ]]; then
  BUFFER=$out[2]
  CURSOR=$out[3]
fi

zle reset-prompt
